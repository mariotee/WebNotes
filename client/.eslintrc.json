{
    "env": {
        "browser": true,        
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"        
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true            
        },
        "sourceType": "module",
        "ecmaVersion": 2018
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "max-len": [
            "warn",
            {
                "code": 100,
                "ignoreComments": true,
                "ignoreUrls": true
            }
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ],
        "operator-linebreak": [
            "warn", 
            "before", 
            {
                "overrides": {
                    "=": "after"
                }
            }
        ]
    }
}